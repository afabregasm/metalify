<div id="form">
    <h2>Signup</h2>
    <form action="/signup" method="POST">
        <label>Username
            <input type="text" name="username" placeholder="User Name" />
        </label>
        <label>Password
            <input type="password" name="password" placeholder="********" />
        </label>
        <button type="submit">Signup</button>
        {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>

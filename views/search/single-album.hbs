<div class="container">
<h2 class="albumname">{{album.name}}</h2>
<br>
<p><img src="{{album.images.0.url}}" alt="{{album.name}}" width="250px" height="250px" class="albumimage" /></p>
<p><a href="/artist/{{album.artists.0.id}}">{{album.artists.0.name}}</a></p>
<p class="releasetext">{{album.release_date}}</p>
<div>
    {{#each album.tracks.items}}
        {{this.track_number}} - {{this.name}}
        <figure>
        <audio
        controls
        src="{{this.preview_url}}">
            Your browser does not support the
            <code>audio</code> element.
        </audio>
    </figure>
    <div class="artistform">
        <form action="/playlist/add-track" method="POST">
            <label for="playlist">Add this song to a playlist:</label>
            <select name="playlistId">
            {{#each this.savedPlaylists}}
            <option value="{{this.id}}">{{this.playlistname}}</option>
            {{/each}}
            </select>
            <input type="hidden" value="{{this.id}}" name="trackId" />
            <button type="submit" class="buttonaddsong">Add song</button>
        </form>
    </div>
    {{/each}}
</div>
</div>